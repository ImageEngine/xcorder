# =============================================================================
# IMPORTS
# =============================================================================
import sys
from PyQt4 import QtGui
from gui import Gui

# =============================================================================
# PUBLIC FUNCTIONS
# =============================================================================
def main():

    app = QtGui.QApplication(sys.argv)
    app.setApplicationName('xcorder')

    with open('stylesheet.qss', 'r') as file_:
        app.setStyleSheet(file_.read())

    gui = Gui()
    gui.show()

    sys.exit(app.exec_())

# =============================================================================

if __name__ == '__main__':
    main()

# =============================================================================

